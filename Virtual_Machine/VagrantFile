# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Alvaro: He cambiado el SO de la m√°quina virtual ya que daba problemas con la interfaz de red
  # Ya que vagrant intenta levantar la interfaz eth1 con ifup pero debian/bullseye 64 usa NetworkManager
  config.vm.box = "bento/debian-11"
  config.ssh.insert_key= false


  config.vm.define "nginx" do |debian|
     debian.vm.hostname="debian"
     debian.vm.network "private_network",ip: "192.168.56.10"
     debian.vm.provision "shell",path: "nginx.sh"
     debian.vm.synced_folder "./html", "/var/www/alvaro/html"
  end
end